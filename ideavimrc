set hlsearch
set incsearch
set ignorecase
set smartcase
set showmode
set number
set scrolloff=5
set history=100000
set clipboard+=unnamed

" Insert mode shortcut
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>
inoremap <C-a> <Home>
inoremap <C-e> <End>
inoremap <C-d> <Delete>

" Quit insert mode
inoremap kj <Esc>
inoremap jk <Esc>

" Move to the start of line
nnoremap H ^

" " Move to the end of line
nnoremap L $

" Redo
nnoremap U <C-r>

" Yank to the end of line
nnoremap Y y$

" Window operation
nnoremap <Space>ww <C-W>w
nnoremap <Space>wd <C-W>c
nnoremap <Space>wj <C-W>j
nnoremap <Space>wk <C-W>k
nnoremap <Space>wh <C-W>h
nnoremap <Space>wl <C-W>l
nnoremap <Space>ws <C-W>s
nnoremap <Space>w- <C-W>s
nnoremap <Space>wv <C-W>v
nnoremap <Space>w\| <C-W>v

" Tab operation
nnoremap tn gt
nnoremap tp gT

nnoremap <Space>gc :action GotoClass<CR>
nnoremap <Space>ga :action GotoAction<CR>

nnoremap <Space>fp :action ShowFilePath<CR>

nnoremap <Space>pm :action ShowPopupMenu<CR>

nnoremap <Space>cl :action CommentByLineComment<CR>

nnoremap <Space>se :action SearchEverywhere<CR>
